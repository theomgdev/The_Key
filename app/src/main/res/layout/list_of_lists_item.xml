<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_list_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="2dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_list_main_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<TextView
				android:id="@+id/list_name"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="5dp"
				android:padding="8dp"
				android:text="List Name"
				android:textSize="16sp"
				android:textColor="#000000"
				android:layout_gravity="center_vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/list_show_more"
				android:focusable="false"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:src="@drawable/ic_arrow_drop_down_black"
				android:scaleType="fitCenter"
				android:layout_gravity="center_vertical" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_list_more"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_details"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="left|center_vertical">
				<TextView
					android:id="@+id/header_feats"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Feats:"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:layout_gravity="center_vertical" />
				<TextView
					android:id="@+id/feats"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|center_vertical"
					android:text="ðŸ”¹Achieveable\nðŸ”¹Timeable\nðŸ”¹Reasonable\nðŸ”¹Becomeable\nðŸ”¹Priority Highlight"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="left|center_vertical" />
				<TextView
					android:id="@+id/header_stats"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Stats:"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000"
					android:layout_gravity="center_vertical" />
				<TextView
					android:id="@+id/stats"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|center_vertical"
					android:text="ðŸ”¹Items: 0/0 (0%)\nðŸ”¹Avg. Time: 0 Years"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="left|center_vertical" />
			</LinearLayout>
			<TextView
				android:id="@+id/list_date"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right|center_vertical"
				android:text="just now"
				android:textSize="10sp"
				android:textColor="#757575"
				android:layout_gravity="right|center_vertical" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
