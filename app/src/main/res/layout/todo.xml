<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="2dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_main_item"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/check_toggle"
				android:focusable="false"
				android:layout_width="36dp"
				android:layout_height="match_parent"
				android:src="@drawable/checkbox_empty"
				android:scaleType="fitCenter"
				android:layout_gravity="center_vertical" />
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/thetext"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="List Item Text"
					android:textSize="16sp"
					android:textColor="#000000"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/show_more"
					android:focusable="false"
					android:layout_width="30dp"
					android:layout_height="match_parent"
					android:src="@drawable/ic_arrow_drop_down_black"
					android:scaleType="fitCenter"
					android:layout_gravity="center_vertical" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_more"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_time"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/header_time"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Time:"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/time"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|top"
					android:text="Time frame (1,3,5 or 10 Years)"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="left|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_reason"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/header_reason"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Why:"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/reason"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|top"
					android:text="Reasons"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="left|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_who"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/header_who"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Who:"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<TextView
					android:id="@+id/who"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="left|top"
					android:text="Who to become to accomplish that\?"
					android:textSize="12sp"
					android:textColor="#000000"
					android:layout_gravity="left|center_vertical" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_controls"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_edit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:padding="8dp"
					android:background="#008DCD"
					android:gravity="center_horizontal|center_vertical"
					android:text="EDIT"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_gravity="left|center_vertical"
					android:layout_weight="1"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
					style="@style/Widget.MaterialComponents.Button" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_delete"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:padding="8dp"
					android:background="#D50000"
					android:gravity="center_horizontal|center_vertical"
					android:text="DELETE"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_gravity="right|center_vertical"
					android:layout_weight="1"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
					style="@style/Widget.MaterialComponents.Button" />
			</LinearLayout>
			<TextView
				android:id="@+id/date"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right|center_vertical"
				android:text="Time since creation."
				android:textSize="10sp"
				android:textColor="#757575"
				android:layout_gravity="right|center_vertical" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
