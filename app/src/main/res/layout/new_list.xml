<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_edit_list_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="2dp"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear_edit_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:orientation="vertical">
			<EditText
				android:id="@+id/edit_list_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:textSize="16sp"
				android:textColor="#000000"
				android:hint="Enter the name of the list."
				android:textColorHint="#607D8B"
				android:lines="1"
				android:imeOptions="actionNext"
				android:layout_gravity="center_horizontal|center_vertical"
				android:focusable="true" />
			<LinearLayout
				android:id="@+id/linear_edit_feats"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="center_horizontal|center_vertical">
				<LinearLayout
					android:id="@+id/linear_feat_A"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="4dp"
					android:gravity="bottom"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_A"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Achievable"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical" />
					<ImageView
						android:id="@+id/check_A"
						android:focusable="false"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/checkbox_empty"
						android:scaleType="fitCenter"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_feat_T"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="4dp"
					android:gravity="bottom"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_T"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Timeable"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical" />
					<ImageView
						android:id="@+id/check_T"
						android:focusable="false"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/checkbox_empty"
						android:scaleType="fitCenter"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_feat_R"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="4dp"
					android:gravity="bottom"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_R"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Reasonable"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical" />
					<ImageView
						android:id="@+id/check_R"
						android:focusable="false"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/checkbox_empty"
						android:scaleType="fitCenter"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_feat_B"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="4dp"
					android:gravity="bottom"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_B"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Becomeable"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical" />
					<ImageView
						android:id="@+id/check_B"
						android:focusable="false"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/checkbox_empty"
						android:scaleType="fitCenter"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear_feat_P"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="4dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/info_P"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Priority\nHighlight"
						android:textSize="12sp"
						android:textColor="#000000"
						android:layout_gravity="center_horizontal|center_vertical" />
					<ImageView
						android:id="@+id/check_P"
						android:focusable="false"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/checkbox_empty"
						android:scaleType="fitCenter"
						android:layout_gravity="center_horizontal|center_vertical" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear_edit_list_controls"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_edit_list_ok"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:padding="8dp"
					android:background="#008DCD"
					android:gravity="center_horizontal|center_vertical"
					android:text="OK"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_gravity="left|center_vertical"
					android:layout_weight="1"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
					style="@style/Widget.MaterialComponents.Button" />
				<com.google.android.material.button.MaterialButton
					android:id="@+id/btn_edit_list_cancel"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="8dp"
					android:padding="8dp"
					android:background="#D50000"
					android:gravity="center_horizontal|center_vertical"
					android:text="CANCEL"
					android:textSize="12sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF"
					android:layout_gravity="right|center_vertical"
					android:layout_weight="1"
					android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
					style="@style/Widget.MaterialComponents.Button" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
